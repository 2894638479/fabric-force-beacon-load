{
	"schemaVersion": 1,
	"id": "force-beacon-load",
	"version": "${version}",
	"name": "Force Beacon Load",
	"description": "强制信标加载",
	"authors": [
		"2894638479"
	],
	"contact": {
		"sources": "https://github.com/2894638479/fabric-force-beacon-load"
	},
	"license": "MIT",
	"icon": "assets/force-beacon-load/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "name.forcebeaconload.ForceBeaconLoad",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "name.forcebeaconload.ForceBeaconLoadClient",
				"adapter": "kotlin"
			}
		],
        "blue_archive_halo_beacon_level_shrinker": [
            {
                "value": "name.forcebeaconload.BeaconLevelShrinker",
                "adapter": "kotlin"
            }
        ]
	},
	"mixins": [
		"force-beacon-load.mixins.json",
		{
			"config": "force-beacon-load.client.mixins.json",
			"environment": "client"
		}
	],
    "accessWidener": "forcebeaconload.accesswidener",
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": "~${minecraft_version}",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	},
	"suggests": {
        "sodium": "${sodium_version}",
		"blue-archive-halo": ">=1.2.0"
	}
}